<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.myapplication.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second" />
        <action
            android:id="@+id/action_nav_home_to_nav_slideshow"
            app:destination="@id/navAddEvent" />
        <action
            android:id="@+id/detailsFromHome"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_home_second"
        android:name="com.example.myapplication.ui.home.HomeSecondFragment"
        android:label="@string/chartName"
        tools:layout="@layout/fragment_home_second">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_home" />

        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_calender"
        android:name="com.example.myapplication.ui.calender.CalenderFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_calender" >
        <action
            android:id="@+id/action_nav_calender_to_planForDay"
            app:destination="@id/planForDay"
            app:enterAnim="@anim/nav_default_enter_anim" />
        <action
            android:id="@+id/action_nav_calender_to_todo"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/navAddEvent"
        android:name="com.example.myapplication.ui.addEvent.AddEventFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_add_event" >
        <action
            android:id="@+id/action_nav_toHome"
            app:destination="@id/nav_home" />
        <argument
            android:name="day"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="month"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="year"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/planForDay"
        android:name="com.example.myapplication.ui.calender.PlanForDay"
        android:label="fragment_plan_for_day"
        tools:layout="@layout/fragment_plan_for_day" >
        <argument
            android:name="day"
            app:argType="string" />
        <argument
            android:name="month"
            app:argType="string" />
        <argument
            android:name="year"
            app:argType="string" />
        <action
            android:id="@+id/addPlanForDay"
            app:destination="@id/navAddEvent" />
        <action
            android:id="@+id/detailsFromPlan"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.myapplication.ui.statistics.StatisticsFragment"
        android:label="fragment_statistics2"
        tools:layout="@layout/fragment_statistics2" />
    <action android:id="@+id/goToDay" app:destination="@id/planForDay" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.myapplication.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
</navigation>